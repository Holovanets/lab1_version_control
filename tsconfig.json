{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/assets": ["./assets"],
			"@/assets/*": ["./assets/*"],
			"@/components": ["./components"],
			"@/components/*": ["./components/*"],
			"@/context": ["./context"],
			"@/context/*": ["./context/*"],
			"@/constants": ["./constants"],
			"@/constants/*": ["./constants/*"],
			"@/hooks": ["./hooks"],
			"@/hooks/*": ["./hooks/*"],
			"@/atoms": ["./atoms"],
			"@/atoms/*": ["./atoms/*"],
			"@/navigation": ["./navigation"],
			"@/navigation/*": ["./navigation/*"],
			"@/providers": ["./providers"],
			"@/providers/*": ["./providers/*"],
			"@/regex": ["./regex"],
			"@/regex/*": ["./regex/*"],
			"@/screens": ["./screens"],
			"@/screens/*": ["./screens/*"],
			"@/types": ["./types"],
			"@/reducers/*": ["./reducers/*"],
			"@/reducers": ["./reducers"],
			"@/actions/*": ["./actions/*"],
			"@/actions": ["./actions"],
			"@/types/*": ["./types/*"],
			"@/utils": ["./utils"],
			"@/utils/*": ["./utils/*"],
			"@/services/*": ["./services/*"],
			"@/services": ["./services"]
		},
		"typeRoots": ["./types"],
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
